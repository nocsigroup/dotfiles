export CLICOLOR=1
export EDITOR="nvim"
export TERM="xterm-256color"
export OPENSSL_STATIC=yes
export OBJC_DISABLE_INITIALIZE_FORK_SAFETY=YES

export LANG='en_US.UTF-8'
export LC_ALL=en_US.UTF-8

export HOMEBREW_NO_ANALYTICS=1
export SDKROOT=`xcrun --show-sdk-path`
export PIP_REQUIRE_VIRTUALENV=false

export GOPATH=$HOME/.golang
export GOROOT=/opt/homebrew/opt/go/libexec
export GOBIN="${GOPATH}/bin"
export PATH="${PATH}:$GOPATH/bin:$GOROOT/bin"

export GEM_HOME=$HOME/.gem
export PKG_CONFIG_PATH="/opt/homebrew/opt/openssl@1.1/lib/pkgconfig"
export RUBY_CONFIGURE_OPTS="--with-openssl-dir=/opt/homebrew/opt/openssl@1.1"
#export PATH="/Users/locnguyen/.gem/ruby/2.6.0/bin:${PATH}"
export PATH="$GEM_HOME/bin:/Users/locnguyen/.bin/:${PATH}"

export LDFLAGS="-L$(brew --prefix xz)/lib -L$(brew --prefix readline)/lib -L$(brew --prefix zlib)/lib"
export CPPFLAGS="-I$(brew --prefix xz)/include  -I$(brew --prefix readline)/include -I$(brew --prefix zlib)/include -I$(xcrun --show-sdk-path)/usr/include"
export PATH="$HOME/.cargo/bin:/opt/homebrew/opt/llvm/bin:$HOME/.mix:$HOME/.mix/escripts:$PATH"
